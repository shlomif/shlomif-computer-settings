[user]
    name = Shlomi Fish
    email = shlomif@shlomifish.org

[alias]
    au = add -u
    ci = commit
    ciread = commit -F ~/conf/trunk/shlomif-settings/git/commit-messages/add-README-or-LICENSE.txt
    co = checkout
    cp = cherry-pick
    dh = diff HEAD
    dhs = diff HEAD --stat
    di = diff
    dim = diff master
    dims = diff master --stat
    i = info info
    ls = ls-files
    st = status

[commit]
    verbose = true
[core]
    excludesfile = ~/conf/git/excludes
[push]
    default = simple
[url "https://gitlab.gnome.org/GNOME/"]
	insteadOf = git://git.gnome.org/
[url "git://anongit.kde.org/"]
	insteadOf = kde:
[url "git@git.kde.org:"]
	pushInsteadOf = kde:
[url "ssh://git@github.com/"]
    pushInsteadOf = https://github.com/
[url "ssh://git@gitlab.com/"]
    pushInsteadOf = https://gitlab.com/
[color]
    ui = false
[github]
    user = shlomif
[include]
    path = ~/.gitconfig-private
[pager]
    ; diff = diff-so-fancy | less --tabs=1,5 -RFX
    show = diff-so-fancy | less --tabs=1,5 -RFX
