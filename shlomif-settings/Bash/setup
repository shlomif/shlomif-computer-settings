#!/usr/bin/env perl

use strict;
use warnings;

use File::Spec;
use File::Basename;
use File::Path qw(mkpath);

my $conf_dir = File::Spec->rel2abs(dirname($0));
my $h = $ENV{HOME};

my $rel_path = $conf_dir;
$rel_path =~ s{\A\Q$h/conf\E/}{../};

mkpath("$h/Bash");
symlink("$rel_path/Themes", "$h/conf/Bash/Themes");
