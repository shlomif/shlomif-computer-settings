#!/bin/bash

song="${DEFAULT_SONG}"

param="$1"
shift

msg="Your task has been finished! Go check it out."
while test -n "$param" ; do
    if test "$param" = "--song"; then
        arg="$1"
        shift
        song="$arg"
    elif test "$param" = "--message"; then
        arg="$1"
        shift
        if test -n "$arg" ; then
            msg="$arg"
        fi
    fi
    param="$1"
    shift
done

(
    kdialog --msgbox "$msg" || xmessage "$msg"
) &
mpv --volume=30 "$song"
